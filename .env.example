# SIL Platform Environment Variables
# Copy this file to .env and fill in your values

# Database
DB_USER=sil_user
DB_PASSWORD=changeme_database_password
DATABASE_URL=postgresql://sil_user:changeme_database_password@localhost:5432/sil

# Redis Cache
REDIS_URL=redis://localhost:6379

# API Server
PORT=3001
NODE_ENV=development
JWT_SECRET=changeme_jwt_secret_key

# Web Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001

# Session & Auth
SESSION_SECRET=changeme_session_secret

# Feature Flags
ENABLE_LEADERBOARDS=true
ENABLE_SEASONS=true
ENABLE_MULTIPLAYER=false

# Embeddings Service (if using external API)
EMBEDDINGS_API_URL=
EMBEDDINGS_API_KEY=

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
