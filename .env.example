# SIL Platform Environment Variables
# Copy this file to .env and fill in your values

# Supabase (Primary Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Legacy Database (if not using Supabase)
DB_USER=sil_user
DB_PASSWORD=changeme_database_password
DATABASE_URL=postgresql://sil_user:changeme_database_password@localhost:5432/sil

# Redis Cache
REDIS_URL=redis://localhost:6379

# Word Embeddings
EMBEDDINGS_PROVIDER=mock
EMBEDDINGS_FILE_PATH=./data/glove.6B.100d.txt
EMBEDDINGS_DIMENSION=100
EMBEDDINGS_FORMAT=glove

# API Server
PORT=3001
NODE_ENV=development
JWT_SECRET=changeme_jwt_secret_key

# Web Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001

# Session & Auth
SESSION_SECRET=changeme_session_secret

# Feature Flags
ENABLE_LEADERBOARDS=true
ENABLE_SEASONS=true
ENABLE_MULTIPLAYER=false

# Embeddings Service (if using external API)
EMBEDDINGS_API_URL=
EMBEDDINGS_API_KEY=

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
